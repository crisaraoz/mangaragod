# =================================
# MANGA READER - VARIABLES DE ENTORNO
# =================================

# -------------------------
# CONFIGURACIÓN GENERAL
# -------------------------
# Entorno de la aplicación
NODE_ENV=development

# URL base de la aplicación
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -------------------------
# API DE MANGADEX
# -------------------------
# URL base de la API de MangaDx
NEXT_PUBLIC_MANGADEX_API_URL=https://api.mangadex.org

# URL base para imágenes de portadas
NEXT_PUBLIC_MANGADEX_COVERS_URL=https://uploads.mangadex.org/covers

# Límite de resultados por página (opcional)
NEXT_PUBLIC_DEFAULT_RESULTS_LIMIT=20

# -------------------------
# OPENAI PARA RECOMENDACIONES
# -------------------------
# API Key de OpenAI (para recomendaciones con IA)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Modelo de OpenAI a utilizar
OPENAI_MODEL=gpt-3.5-turbo

# Temperatura para las recomendaciones (0.0 - 2.0)
OPENAI_TEMPERATURE=0.7

# -------------------------
# CONFIGURACIÓN DE CACHÉ
# -------------------------
# Tiempo de caché para mangas populares (en segundos)
CACHE_POPULAR_MANGA_TTL=3600

# Tiempo de caché para detalles de manga (en segundos)
CACHE_MANGA_DETAILS_TTL=1800

# -------------------------
# CONFIGURACIÓN DE IMÁGENES
# -------------------------
# CDN para optimización de imágenes (opcional)
NEXT_PUBLIC_IMAGE_CDN_URL=

# Calidad de imágenes por defecto (1-100)
NEXT_PUBLIC_IMAGE_QUALITY=85

# -------------------------
# CONFIGURACIÓN DE ANÁLISIS
# -------------------------
# Google Analytics ID (opcional)
NEXT_PUBLIC_GA_ID=

# -------------------------
# CONFIGURACIÓN DE DESARROLLO
# -------------------------
# Habilitar logs detallados en desarrollo
DEBUG_MODE=true

# Habilitar modo demo con datos mock
DEMO_MODE=false

# -------------------------
# CONFIGURACIÓN DE SEGURIDAD
# -------------------------
# Dominio permitido para CORS
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# -------------------------
# CONFIGURACIÓN DE RATE LIMITING
# -------------------------
# Límite de requests por minuto por IP
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# -------------------------
# CONFIGURACIÓN DE BACKUP
# -------------------------
# URL para respaldo automático de datos de usuario (opcional)
BACKUP_API_URL=

# -------------------------
# CONFIGURACIÓN DE NOTIFICACIONES
# -------------------------
# Para futuras notificaciones push (opcional)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=

# -------------------------
# CONFIGURACIÓN DE IDIOMAS
# -------------------------
# Idiomas predeterminados (separados por coma)
DEFAULT_LANGUAGES=en,es,ja

# -------------------------
# CONFIGURACIÓN DE FEATURES
# -------------------------
# Habilitar recomendaciones con IA
ENABLE_AI_RECOMMENDATIONS=true

# Habilitar modo offline
ENABLE_OFFLINE_MODE=false

# Habilitar análisis de uso
ENABLE_ANALYTICS=false 